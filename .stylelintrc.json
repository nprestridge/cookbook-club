      "text-emphasis-color",
      "text-indent",
      "text-justify",
      "text-outline",
      "text-overflow",
      "text-overflow-ellipsis",
      "text-overflow-mode",
      "text-transform",
      "text-wrap",
      "text-shadow",
      "white-space",
      "word-spacing",
      "word-wrap",
      "word-break",
      "color",
      "clip",
      "background",
      "background-attachment",
      "background-clip",
